<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:gravity="top">

    <!-- 🚍 School Bus Icon -->
    <ImageView
        android:id="@+id/schoolBusIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:contentDescription="School Bus Icon"
        android:paddingBottom="16dp" />

    <!-- 📝 Chat -->
    <TextView
        android:id="@+id/menuChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- 🛣 Routes -->
    <TextView
        android:id="@+id/menuRoutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Routes"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- ✅ Approve Users -->
    <TextView
        android:id="@+id/menuApproveUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approve Users"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/menuEmergencyAlerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Alerts"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- 🚪 Logout -->
    <TextView
        android:id="@+id/menuLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
